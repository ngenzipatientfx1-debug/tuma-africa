# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/tuma_africa

# Session & Authentication
SESSION_SECRET=change-this-to-a-random-secret-string-min-32-chars
JWT_SECRET=change-this-to-another-random-secret-string-min-32-chars
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# File Upload Settings
MAX_FILE_SIZE=2097152
UPLOAD_DIR=./uploads

# Optional: Email Configuration (for password reset - future feature)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
